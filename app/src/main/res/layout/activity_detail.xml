<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="15dp"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry"
            tools:text="@tools:sample/full_names" />
        <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/milage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry"
            tools:text="@tools:sample/full_names" />
        <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/milage"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry"
            tools:text="@tools:sample/full_names" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/location"
            android:layout_marginTop="30dp"
            android:background="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:text="Vehicle Info"
            android:layout_marginTop="10dp"
            android:textSize="15dp"

            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl"

            android:layout_marginTop="10dp"
            android:background="@color/white"

            android:text="Location \n Exterrior Color \n Interior Color  \n Drive Typr \n Transmission \n Engine \n Fuel"
            android:textSize="15dp"
            android:textStyle="bold" />
        <View
            android:layout_width="1dp"
            android:id="@+id/v"
            android:layout_centerInParent="true"
            android:layout_below="@+id/lbl"
            android:layout_height="1dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/vdetail"
            android:layout_toRightOf="@+id/v"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@color/white"
android:textColor="@color/black"
            android:text="Location \n Exterrior Color \n Interior Color"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>